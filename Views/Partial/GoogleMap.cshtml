<div class="experienceRestrictedText">
    <script src="//maps.google.com/maps/api/js?sensor=false&callback=initialize" type="text/javascript"></script>
    <script type="text/javascript">
      
        function initialize() {
            var Lat = '@ViewBag.Lat';
            var Lon = '@ViewBag.Lon';
            //alert(Lat + ',' + Lon);
            //var myLatlng = new google.maps.LatLng(36.590587, 36.163656);
            var myLatlng = new google.maps.LatLng(Lat, Lon);
            var mapOptions = {
                zoom: 15,
                center: myLatlng
            }
            var map = new google.maps.Map(document.getElementById('map'), mapOptions);

            var marker = new google.maps.Marker({
                position: myLatlng,
                map: map,
                title: 'Hello World!'
            });
        }

        google.maps.event.addDomListener(window, 'load', initialize);

    </script>
    <div class="map" id="map" style="width:400px; height:400px;"></div>
</div>